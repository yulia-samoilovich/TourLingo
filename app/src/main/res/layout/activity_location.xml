<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="Location"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        style="@style/heading_style"/>

    <ImageView
        android:id="@+id/imMoscow"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/moscow"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMoscow"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"
        android:text="Moscow"
        app:layout_constraintTop_toBottomOf="@id/imMoscow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imSeoul"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/seoul"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnMoscow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSeoul"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"
        android:text="Seoul"
        app:layout_constraintTop_toBottomOf="@id/imSeoul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imVancouver"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/vancouver"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnSeoul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnVancouver"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"
        android:text="Vancouver"
        app:layout_constraintTop_toBottomOf="@id/imVancouver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>