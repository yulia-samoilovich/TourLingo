<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vancouver">

    <!-- text View -->
    <TextView
        android:id="@+id/tvVancouverTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="Vancouver"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        style="@style/heading_style"/>

    <ImageView
        android:id="@+id/vancouver_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/vancouver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVancouverTitle" />


    <EditText
        android:id="@+id/edVancouverComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="18"
        app:layout_constraintTop_toBottomOf="@id/vancouver_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edVancouverComment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="18"
        app:layout_constraintTop_toBottomOf="@id/edVancouverComment"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/vancouverview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/edVancouverComment1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:listSelector="@drawable/vancouver_selector"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/vancouversave_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vancouverview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/vancouvermodify_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"
        android:text="modify"
        android:onClick="openLocationActivity"
        app:layout_constraintBaseline_toBaselineOf="@id/vancouversave_button"
        app:layout_constraintLeft_toRightOf="@id/vancouversave_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>


    <Button
        android:id="@+id/vancouverdelete_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"
        android:text="delete"
        app:layout_constraintBaseline_toBaselineOf="@id/vancouversave_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back"
        android:onClick="openLocationActivity"
        app:layout_constraintLeft_toRightOf="@id/vancouversave_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="508dp" />

    <TextView
        android:id="@+id/tvReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Go back"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/btnReturn"
        app:layout_constraintTop_toBottomOf="@id/vancouversave_button" />


    <!--<com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="#DC7B5C"
        app:itemTextColor="#DC7B5C"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>