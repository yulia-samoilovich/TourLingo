<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Social">


    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/social_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imVisit"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/visit"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="22dp"
        app:layout_constraintTop_toBottomOf="@id/imLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imVisit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Select Location"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/button_selector"
        app:layout_goneMarginTop="20dp"
        />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bar_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/btnSocial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnProgress"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>